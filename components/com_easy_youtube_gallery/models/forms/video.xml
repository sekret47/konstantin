<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>

              <field name="id" type="text" default="0" label="COM_EASY_YOUTUBE_GALLERY_FORM_LBL_VIDEO_ID"
            readonly="true" class="readonly"
            description="JGLOBAL_FIELD_ID_DESC" /> 

       <field name="catid" type="text"
                
            label="COM_EASY_YOUTUBE_GALLERY_FORM_LBL_VIDEO_CATID"
            description="COM_EASY_YOUTUBE_GALLERY_FORM_DESC_VIDEO_CATID" 
                
                
                
            filter="raw" /> 

       <field name="title" type="text"
                
            label="COM_EASY_YOUTUBE_GALLERY_FORM_LBL_VIDEO_TITLE"
            description="COM_EASY_YOUTUBE_GALLERY_FORM_DESC_VIDEO_TITLE" 
                
                
                 /> 

       <field name="url" type="text"
                
            label="COM_EASY_YOUTUBE_GALLERY_FORM_LBL_VIDEO_URL"
            description="COM_EASY_YOUTUBE_GALLERY_FORM_DESC_VIDEO_URL" 
                
                
                 required="true"  /> 

       <field name="thumb" type="media"
                
            label="COM_EASY_YOUTUBE_GALLERY_FORM_LBL_VIDEO_THUMB"
            description="COM_EASY_YOUTUBE_GALLERY_FORM_DESC_VIDEO_THUMB" 
                
                
                
            directory="videoThumb" /> 

       <field name="youtubethumb" type="integer"
                
            label="COM_EASY_YOUTUBE_GALLERY_FORM_LBL_VIDEO_YOUTUBETHUMB"
            description="COM_EASY_YOUTUBE_GALLERY_FORM_DESC_VIDEO_YOUTUBETHUMB" 
                
                
                
            first="0"
            last="3"
            step="1" /> 

       <field name="description" type="textarea"
                
            label="COM_EASY_YOUTUBE_GALLERY_FORM_LBL_VIDEO_DESCRIPTION"
            description="COM_EASY_YOUTUBE_GALLERY_FORM_DESC_VIDEO_DESCRIPTION" 
                
                
                
            cols="30"
            rows="3"
            filter="raw" /> 

       <field name="created_by" type="createdby" default="" 
            label="COM_EASY_YOUTUBE_GALLERY_FORM_LBL_VIDEO_CREATED_BY"
            description="COM_EASY_YOUTUBE_GALLERY_FORM_DESC_VIDEO_CREATED_BY"  /> 

         <field
        name="state"
        type="list"
        label="JSTATUS"
        description="JFIELD_PUBLISHED_DESC"
        class="inputbox"
        size="1"
        default="1">
        <option value="1">JPUBLISHED</option>
        <option value="0">JUNPUBLISHED</option>
    </field> 

                        <field name="checked_out" type="hidden" filter="unset" />
        <field name="checked_out_time" type="hidden" filter="unset" />

	</fieldset>

</form>
